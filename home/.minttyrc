#Transparency=medium
CursorType=line
CursorBlinks=yes

## Text
#Font=Migu 2M
#FontHeight=12
BoldAsFont=no
BoldAsColour=yes
AllowBlinking=no
#FontSmoothing=full
#FontRender=uniscribe
#Locale=en_US
